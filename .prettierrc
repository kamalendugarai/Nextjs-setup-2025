{
  "useTabs": true,
  "semi": true,
  "trailingComma": "none",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "bracketSameLine": true,
  "tabWidth": 2,
  "importOrder": ["/*/.(js)$/", "/*/.(ts)$/", "/*/.(jsx)$/", "/*/.(tsx)$/"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 70,
        "useTabs": false,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
      "options": {
        "useTabs": false
      }
    }
  ]
}
